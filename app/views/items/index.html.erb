<h1>All The Nineties Things</h1>

<div>
  <h3>
    <% if @user_can_create %>
      <u><%= link_to "Add a new Thing", new_item_path %></u>
    <% else %>
      Sign in to Submit a Thing
    <% end %>
  </h3>
</div>

<div>
  <% @items.each do |item| %>
    <div>
      <h4><%= link_to item.title, item %></h4>
    </div>
  <% end %>
</div>
